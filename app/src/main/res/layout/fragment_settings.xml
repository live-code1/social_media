<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Style2"
    tools:context=".view.fragment.SettingsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/enable_dark_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_dark_mode">


            <RelativeLayout
                android:id="@+id/my_balance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/kastelov_axiforma_regular"
                        android:gravity="center|start"
                        android:lineSpacingExtra="45sp"
                        android:layout_weight="1"
                        android:text="@string/version"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />

                    <TextView

                        android:id="@+id/txt_version"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/kastelov_axiforma_regular"
                        android:gravity="center|start"
                        android:lineSpacingExtra="45sp"
                        android:text="1"
                        style="@style/TextStyle"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                </LinearLayout>



                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1dp"
                android:background="@color/app_bg" />

            <RelativeLayout
                android:id="@+id/about_us_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/kastelov_axiforma_regular"
                    android:gravity="center|start"
                    android:lineSpacingExtra="45sp"
                    android:text="@string/my_about_us"
                   style="@style/TextStyle"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />

            </RelativeLayout>

            <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:background="@color/app_bg"
                android:layout_margin="@dimen/x1dp"/>

            <RelativeLayout
                android:id="@+id/contact_us_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/kastelov_axiforma_regular"
                    android:gravity="center|start"
                    android:lineSpacingExtra="45sp"
                    android:text="@string/contact_us"
                    style="@style/TextStyle"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1dp"
                android:background="@color/app_bg"
                android:layout_margin="@dimen/x1dp"/>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>